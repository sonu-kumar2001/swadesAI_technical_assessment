{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "paths": {
            "@repo/shared": [
                "../../packages/shared/src"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../../packages/shared/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}